{% extends 'baseAdmin.html.twig' %}

{% block title %}Gestion des salles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="">Cr√©ation d'une nouvelle salle</h1>
        <div class="card">
            <div class="card-body text-white">
                {{form_start(form)}}
                <div class="d-flex">
                    <div class="mr-2">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="mr-2">
                        {{ form_row(form.nbPlayer) }}
                    </div>
                    <div class="mr-2">
                        {{ form_row(form.duration) }}
                    </div>
                    <div class="mr-2">
                        {{ form_row(form.difficulty) }}
                    </div>
                    <div class="mr-2">
                        {{ form_row(form.button) }}
                    </div>
                    <div>
                        {{ form_row(form.link) }}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="mr-2">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="mr-2">
                        {{ form_row(form.video) }}
                    </div>
                    <div>
                        {{ form_row(form.background) }}
                    </div>
                </div>
                <div>
                    {{ form_row(form.message) }}
                </div>
                <div>
                    {{ form_row(form.content) }}
                </div>
                <button type="submit" class="btn btnAdmin btn-block">Enregistrer</button>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
    
tinymce.init({
    selector: '.textRoom',
    height: 350,
    toolbar_mode: 'floating',
    language: 'fr_FR',
    toolbar: 'forecolor backcolor undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent',

});
    </script>
{% endblock %}
